  <%= render "layouts/navbar" %>
</head>

<body>
  <section class="content">
    <header><%= yield(:header) %></header>
    <% flash.each do |message| %>
    <div class="flash container alert alert-danger"><%= message[1] %></div>
    <% end %>
    <%= yield(:content) %>
  </section>
</body>

</html>
