<div class="form-container" id="form-container-alpaca">
            <form 
                method="post"
            <% if @settings %>
                action=<%= "settings/" %>
                <% else %>
                action=<%= "settings/" %>
            <% end %>>
            <div class="mb-3">
                    <label for="broker" class="form-label">Broker</label>
                    <select name="broker" class="form-select" aria-label="Default select example" required>
                        <option value="Binance" 
                            <% if @settings %> 
                                <%= "selected" if @settings.broker == "Binance" %>
                            
                            <% end %>
                        >Binance</option>

                        <option value="Alpaca"
                            <% if @settings %>
                                <%= "selected" if @settings.broker == "Alpaca" %>
                            <% end %>
                        >Alpaca</option>

                    </select>
                </div>
                <div class="mb-3">
                    <label for="ai-account_type" class="form-label">Type</label>
                    <select name="account_type" class="form-select" aria-label="Default select example" required>
                        <option value="live" 
                            <% if @settings %> 
                                <%= "selected" if @settings.endpoint == "https://api.alpaca.markets" %>
                            
                            <% end %>
                        >Live</option>

                        <option value="paper"
                            <% if @settings %>
                                <%= "selected" if @settings.endpoint == "https://paper-api.alpaca.markets" %>
                            <% end %>
                        >Paper</option>

                    </select>
                </div>
                <div class="mb-3">
                    <label for="api_key" class="form-label">API Key</label>
                    <div class="input-group">
                        <input type="password" name="api_key" class="form-control password" id="api_key" 
                        <% if @settings %>
                            value=<%= @settings.key_id %>
                        <% else %>
                            value=""
                        <% end %> placeholder="Enter your API key" required>
                        <button type="button" class="btn btn-outline-secondary input-group-text togglePassword">
                            <i class="fa-solid fa-eye-slash"></i>
                        </button>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="api_secret" class="form-label">API Secret</label>
                    <div class="input-group">
                        <input type="password" name="api_secret" class="form-control password" id="api_secret" 
                        <% if @settings %>
                            value=<%= @settings.key_secret %>
                        <% else %> 
                            value=""
                        <% end %> placeholder="Enter your API secret" required>
                        <button type="button" class="btn btn-outline-secondary input-group-text togglePassword">
                            <i class="fa-solid fa-eye-slash"></i>
                        </button>
                    </div>
                </div>

            <button type="submit" class="btn btn-primary">Save</button>
                <a href="/" class="btn btn-secondary float-end">Go Back</a>
            </form>
        </div>

<%= javascript_include_tag "viewPassword.js" %>
