<%= content_for :header do %>
<div class="container">
    <h1 class="h1 display-3"><%= content_for?(:title) ? yield(:title) : "Change Password" %></h1>
</div>
<% end %>

<%= content_for :content do %>
<div class="container">
  <%= form_with url: auth_change_password_path, id: "changePasswordForm", local: true, html: { class: "form-horizontal" } do |form| %>
  
    <div class="mb-3">
      <%= form.label :current_password, class: "form-label" %>
      <div class="input-group">
        <%= form.password_field :current_password, class: "form-control password", id: "current_password" %>
        <button type="button" class="btn btn-outline-secondary input-group-text togglePassword">
        <i class="fa-solid fa-eye-slash"></i>
        </button>
      </div>
    </div>

    <div class="mb-3">
      <%= form.label :new_password, class: "form-label" %>
      <div class="input-group">
        <%= form.password_field :new_password, class: "form-control password", id: "new_password", 'aria-describedby': "passwordHelpBlock" %>
        <button type="button" class="btn btn-outline-secondary input-group-text togglePassword">
        <i class="fa-solid fa-eye-slash"></i>
        </button>
      </div>
      <div id="passwordHelpBlock" class="form-text help-block">

    </div>

    <div class="mb-3">
      <%= form.label :confirm_password, class: "form-label" %>
      <div class="input-group">
        <%= form.password_field :confirm_password, class: "form-control password", id: "confirm_password" %>
        <button type="button" class="btn btn-outline-secondary input-group-text togglePassword">
        <i class="fa-solid fa-eye-slash"></i>
        </button>
      </div>
      <div id="password_message" class="text-danger"></div>
    </div>

    <br>

    <div class="mb-3">
      <%= form.submit "Change Password", class: "btn btn-primary btn-lg", id: "change_password_btn" %>
    </div>
  <% end %>

</div>
  <%= javascript_include_tag "changePassword" %>
  <%= javascript_include_tag "viewPassword.js" %>
  <%= javascript_include_tag "checkRegisterPassword.js" %>

<% end %>
